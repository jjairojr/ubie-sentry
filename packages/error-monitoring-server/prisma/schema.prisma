// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(cuid())
  name      String
  apiKey    String   @unique
  createdAt DateTime @default(now())

  errors      Error[]
  errorGroups ErrorGroup[]

  @@map("projects")
}

model Error {
  id           String   @id @default(cuid())
  projectId    String
  message      String
  stackTrace   String?
  errorType    String?
  browserInfo  String?
  url          String?
  fingerprint  String
  occurredAt   DateTime
  createdAt    DateTime @default(now())
  breadcrumbs  String?

  project Project @relation(fields: [projectId], references: [id])

  @@index([projectId])
  @@index([fingerprint])
  @@index([occurredAt])
  @@map("errors")
}

model ErrorGroup {
  id        String   @id @default(cuid())
  projectId String
  fingerprint String
  firstSeen DateTime @default(now())
  lastSeen  DateTime @default(now())
  count     Int      @default(1)
  message   String?
  errorType String?

  project Project @relation(fields: [projectId], references: [id])

  @@unique([projectId, fingerprint])
  @@index([projectId])
  @@index([fingerprint])
  @@map("error_groups")
}
